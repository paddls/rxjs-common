{
  "name": "@witty-services/rxjs-common",
  "version": "1.3.0",
  "description": "Type repository core library",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "repository": {
    "type": "git",
    "url": "http://github.com/witty-services/rxjs-common"
  },
  "scripts": {
