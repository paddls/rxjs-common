{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "esnext",
    "sourceMap": true,
    "lib": ["es2018", "dom"],
    "outDir": "./dist",
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "manual_typings"],
    "paths": {
      "lodash/*": ["node_modules/@types/lodash-es/*"]
    },
    "esModuleInterop": true
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.*"
  ]
}
